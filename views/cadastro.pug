extends layout

block content
    .container.center
        .row
            form.mg-btm
                h3.heading-desc
                    | Cadastro de #{tipo}
                .social-box
                    .row
                    .col-md-23
                    p.left-align.mg-btm Dados de Perfil
                    img.media-object.img-responsivel(src='http://graph.facebook.com/' + user.id + '/picture?type')
                    script.
                         $.getJSON('https://people.googleapis.com/v1/people/' + user.id + '?personFields=photos&key=AIzaSyBoZtgq1yA7obytvPdVUE7ss_IdgkpcS_8', function (data) {
                             $('#photo').attr("src",data[url]);
                         });
                    img#photo.media-object.img-responsivel(src='teste')
                    .row.mg-btm
                        .col-md-12.left-align
                            label
                                span
                                    | Nome Completo:
                                //if user.displayName
                                input.with-gap(name='group1' value=user.displayName)
                                //else
                                    //input.with-gap(name='group1' value=user.getName())
                            label
                                span
                                    | E-mail:
                                input.with-gap(name='group1' value=user.emails[0].value)
                            label
                                span
                                    | Celular:
                                input.with-gap(type='tel' name='phone' pattern='([0-9]{2}) [0-9]{5}-[0-9]{4}' required='')
                    a.btn-floating.btn-large.waves-effect.waves-light.left(href='/logout')
                        i.material-icons keyboard_arrow_left
                    a.btn-floating.btn-large.waves-effect.waves-light.right
                        i.material-icons keyboard_arrow_right
